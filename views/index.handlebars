<h1>Burgers!</h1><img id="img" src="/assets/burger.jpg" height="100px" width="100px">

<h2>Yum yum!</h2>

<ul>
  {{#each burgers}}
  {{#unless devoured}}
    <li>
      {{burger_name}}
    </li>
  {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you have devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured }}
    <li>
      {{burger_name}}
    </li>
    {{/if}}
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>

